% \titlespacing*{\section}{0pt}{1\baselineskip}{.25\baselineskip} 
% \titlespacing*{\subsection}{0pt}{1\baselineskip}{.25\baselineskip} 

\titlespacing*{\chapter}{0pt}{1\baselineskip}{1ex}
\titlespacing*{\section}{0pt}{1\baselineskip}{1.75ex} 
\titlespacing*{\subsection}{0pt}{2.75ex}{1ex} 

\RequirePackage[labelfont={sc}]{caption}

\def\address{\gdef\@address}
\def\emailaddress{\gdef\@emailaddress}
\def\titleprefix{\gdef\@titleprefix}
\def\runninghead{\gdef\@runninghead}

\newcommand{\sectionline}{%
  \nointerlineskip \vspace{\baselineskip}%
  \hspace{\fill}\rule{0.5\linewidth}{.7pt}\hspace{\fill}%
  \par\nointerlineskip \vspace{\baselineskip}
}
\def\@maketitle{%
  \newpage
  \null
  %\vskip 1em%
  %\begin{center}%
  \singlespacing
  {\noindent{\color{grey}\spacedlowcaps{\@titleprefix\ for}}\par}
  {\noindent\raggedright\large\spacedsmallcaps{\@title}\par}%
  \vspace{1ex}%
  {\raggedleft\normalsize\spacedsmallcaps\@author\par}%
  \vspace{1ex}%
  {\raggedright\scriptsize\it\begin{tabular}{@{\rm}r@{ }l@{}}%
      \@address
    \end{tabular}\par}%
  \vspace{1ex}%
  {\raggedleft\footnotesize\@emailaddress\par}
  \nointerlineskip\vspace{.75\baselineskip}
  \noindent\rule{\linewidth}{.7pt}
  \textspacing
  \par
  \vskip 1em}

